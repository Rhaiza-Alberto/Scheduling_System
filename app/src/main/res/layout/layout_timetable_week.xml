<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Your existing header + RecyclerView -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_dark_green">
        <!-- Your 7 day headers -->
        <TextView android:layout_width="100dp" android:layout_height="60dp" android:text="SCHEDULE" android:gravity="center" android:textColor="@color/white" android:textStyle="bold"/>
        <TextView android:layout_width="120dp" android:layout_height="60dp" android:text="MONDAY" android:gravity="center" android:textColor="@color/white" android:textStyle="bold"/>
        <!-- ... repeat for all days -->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/containerRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>
</LinearLayout>