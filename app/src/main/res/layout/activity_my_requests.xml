<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:theme="@style/Theme.RoomBooking"
    tools:context=".MyRequestsActivity">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/primary_green"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/my_requests"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/track_your_booking_status"
        android:textColor="#E8F5E9"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <HorizontalScrollView
        android:id="@+id/filterTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/all"
                android:textColor="@color/primary_green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/pending"
                android:textColor="#5C6BC0" />

            <TextView
                android:id="@+id/tabApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/approved"
                android:textColor="#5C6BC0" />

            <TextView
                android:id="@+id/tabRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/rejected"
                android:textColor="#5C6BC0" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterTabs"
        tools:listitem="@layout/item_my_request" />

</androidx.constraintlayout.widget.ConstraintLayout>