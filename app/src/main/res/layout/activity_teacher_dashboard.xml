<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".TeacherDashboardActivity">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/primary_green"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Teacher Portal Label -->
    <TextView
        android:id="@+id/tvTeacherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.1"
        android:text="@string/teacher_portal"
        android:textAllCaps="true"
        android:textColor="#263238"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/tvTeacherTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTeacherTitle"
        app:tint="@color/white"
        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/welcome"
        android:textColor="#263238"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvTeacherTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTeacherTitle" />

    <!-- Teacher Name -->
    <TextView
        android:id="@+id/tvProfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_prof_name"
        android:textColor="#0D47A1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

    <!-- Navigation Tabs -->
    <HorizontalScrollView
        android:id="@+id/navTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/tvProfName">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabMySchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/my_schedule"
                android:textColor="#43A047"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabRoomSchedules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/room_schedules"
                android:textColor="#4E342E" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navTabs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- View Toggle Buttons (Day/Week) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDay"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/day_view"
                    android:textColor="#0D47A1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary_green"
                    app:cornerRadius="8dp"
                    app:elevation="2dp"
                    tools:ignore="VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWeek"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/week_view"
                    android:textColor="#43A047"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="8dp"
                    app:elevation="2dp"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="2dp"
                    tools:ignore="VisualLintButtonSize" />

            </LinearLayout>

            <!-- List Header -->
            <TextView
                android:id="@+id/tvListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/my_schedule"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Schedule RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_teacher_schedule" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>