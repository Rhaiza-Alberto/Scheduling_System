<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".AdminDashboardActivity">

    <!-- Header Background -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/primary_dark_green"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Admin Title -->
    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/admin_portal"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/tvAdminTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAdminTitle"
        app:tint="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Greeting -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/admin_manage_schedule"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvAdminTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminTitle" />

    <!-- Tabs -->
    <HorizontalScrollView
        android:id="@+id/navTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/tvGreeting">
        <!-- Your tabs here (unchanged) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Your 3 tabs -->
            <TextView
                android:id="@+id/tabSchedules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/schedules"
                android:textColor="@color/primary_dark_green"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tabUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/users"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tabRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_outline"
                android:backgroundTint="#26FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/rooms"
                android:textColor="@color/white" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main Scrollable Content -->
    <!-- WEEK / DAY TOGGLE SWITCH -->
    <LinearLayout
        android:id="@+id/layoutViewMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/navTabs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/week"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchViewMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:thumbTint="@color/white"
            app:trackTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerDaySelect"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/bg_spinner_rounded"
            android:entries="@array/day_of_week"
            android:visibility="gone" />
    </LinearLayout>

    <!-- TIMETABLE CONTAINER - Switches between Week & Day -->
    <FrameLayout
        android:id="@+id/timetableContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutViewMode"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- WEEK VIEW -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollWeekly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="horizontal">

            <include layout="@layout/layout_timetable_week" />
        </HorizontalScrollView>

        <!-- DAY VIEW -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollDailyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clipToPadding="false">

            <include layout="@layout/layout_timetable_day" />
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- FAB Overlay & Menu (unchanged) -->
    <View
        android:id="@+id/fabOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:elevation="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Your 3 FAB options + main FAB (unchanged) -->
    <!-- ... (layoutAddUser, layoutAddRoom, layoutAddSchedule, fabMain) ... -->
    <!-- Keep them exactly as you had — they’re perfect -->

    <LinearLayout
        android:id="@+id/layoutAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layoutAddRoom"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- ... -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAddRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layoutAddSchedule"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- ... -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAddSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/fabMain"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- ... -->
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/primary_green"
        android:contentDescription="@string/add_new_room"
        android:src="@drawable/ic_add"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>